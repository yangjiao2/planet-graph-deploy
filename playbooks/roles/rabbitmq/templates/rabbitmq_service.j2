---
apiVersion: v1
kind: Service
metadata:
    name: rabbitmq
    namespace: "{{ k8s_ns }}"
spec:
    ports:
    - name: amqp
      protocol: TCP
      port: 5672
      targetPort: 5672
    - name: epmd
      protocol: TCP
      port: 4369
      targetPort: 4369
    - name: http
      protocol: TCP
      port: 15672
      targetPort: 15672
    selector:
      app: rabbitmq
    type: NodePort

        